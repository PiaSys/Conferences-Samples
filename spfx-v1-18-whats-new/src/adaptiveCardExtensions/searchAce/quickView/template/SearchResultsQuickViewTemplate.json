{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Input.Text",
      "id": "filterByName",
      "inlineAction": {
        "type": "Action.Submit",
        "title": "${searchActionTitle}",
        "data": {
          "id": "search"
        }
      },
      "value": "${queryString}",
      "placeholder": "${placeholder}"
    },
    {
      "type": "TextBlock",
      "text": "Add markup to display the results",
      "size": "normal",
      "separator": true,
      "spacing": "extraLarge"
    }
  ]
}