{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "text": "${title}"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "${subTitle}",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Large",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "spacing": "Large",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "DATE",
                  "size": "small",
                  "weight": "Bolder",
                  "style": "heading",
                  "wrap": true
                }
              ],
              "width": "50px"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "CUSTOMER",
                  "size": "small",
                  "weight": "Bolder",
                  "style": "heading",
                  "wrap": true
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "STATUS",
                  "size": "small",
                  "weight": "Bolder",
                  "style": "heading",
                  "wrap": true
                }
              ],
              "width": "60px"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "AMOUNT",
                  "size": "small",
                  "weight": "Bolder",
                  "style": "heading",
                  "wrap": true
                }
              ],
              "width": "70px"
            }
          ]
        }
      ],
      "bleed": true
    },
    {
      "$data": "${orders}",
      "type": "Container",
      "$when": "${status == $root.statusFilter || $root.statusFilter == -1}",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${formatDateTime(date, 'MM-dd')}",
                  "size": "small",
                  "wrap": true
                }
              ],
              "width": "50px"
            },
            {
              "type": "Column",
              "spacing": "Medium",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${customer}",
                  "size": "small",
                  "wrap": true
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${if(status == 0, 'Inserted', if(status == 1, 'Processed', if(status == 2, 'Delivered', if(status == 3, 'Completed', ''))))}",
                  "color": "${if(status == 0, 'default', if(status == 1, 'warning', if(status == 2, 'accent', if(status == 3, 'good', ''))))}",
                  "size": "small",
                  "wrap": true
                }
              ],
              "width": "60px"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "â‚¬${formatNumber(totalAmount, 2)}",
                  "size": "small",
                  "wrap": true
                }
              ],
              "width": "70px"
            }
          ]
        }
     ]
    }
  ]
}