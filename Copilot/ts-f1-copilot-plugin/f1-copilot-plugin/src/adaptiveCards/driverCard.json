{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "ID: ${driverId}",
      "wrap": true,
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Reference: ${driverRef}",
      "wrap": true,
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Number: ${number}",
      "wrap": true,
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Code: ${code}",
      "wrap": true,
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Firstname: ${forename}",
      "wrap": true,
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Lastname: ${surname}",
      "wrap": true,
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Date of birth: ${dob}",
      "wrap": true,
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Nationality: ${nationality}",
      "wrap": true,
      "size": "Medium"
    } 
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Details",
      "url": "${url}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}